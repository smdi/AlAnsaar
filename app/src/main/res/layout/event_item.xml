<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topRelative"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/ribbons"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:elevation="10dp"
        android:src="@drawable/ribbonssf"
        app:layout_constraintBottom_toTopOf="@id/cardView"
        tools:layout_editor_absoluteX="264dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="2dp"
        android:innerRadius="4dp"
        android:shape="rectangle"
        android:thicknessRatio="10"
        app:cardMaxElevation="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">
<RelativeLayout

    android:id="@+id/aboveInCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alansar"
        android:background="#FFF"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/alansar"
        />

        <RelativeLayout
            android:id="@+id/Layout_inCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <RelativeLayout
                android:layout_below="@id/main_head"
                android:layout_marginTop="30dp"
                android:id="@+id/imageViewRelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/CircularImageOntop"
                    android:background="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/main_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/follow"
                android:text="This is Heading"
                android:textColor="#000"
                android:textScaleX="1.1"
                android:textSize="15sp"
                android:tooltipText="hello" />




            <TextView
                android:id="@+id/description"
                android:maxLines="3"
                android:layout_marginRight="5dp"
                android:layout_below="@id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="description"
                android:textScaleX="1.1"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:tooltipText="this is  description"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="29 jan 2018"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/imageViewRelay"
                android:tooltipText="hello"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="show more"
                android:layout_marginTop="20dp"
                android:layout_below="@id/description"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/follow"
                android:layout_marginLeft="15dp"
                android:src="@drawable/watsapp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/description"
                android:textSize="15sp" />



            <ImageView
                android:id="@+id/share"
                android:layout_marginRight="15dp"
                android:src="@drawable/shareoption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/description"
                android:textSize="15sp" />



        </RelativeLayout>


</RelativeLayout>


    </android.support.v7.widget.CardView>

    <WebView
        android:id="@+id/watsapp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">
    </WebView>

</RelativeLayout>